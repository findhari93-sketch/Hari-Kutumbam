rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if user owns the document (preserved for transactions/bank accounts)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Transactions (Still private per user for now)
    match /transactions/{document} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Bank Accounts (Still private)
    match /bankAccounts/{document} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Milk Logs - SHARED FAMILY ACCESS
    // Any authenticated user can read all logs.
    // Any authenticated user can create/update logs.
    match /milk_logs/{document} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAuthenticated(); // Or restrict to owner if needed
    }

    // Milk Payments - SHARED FAMILY ACCESS
    match /milk_payments/{document} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
  }
}
